<div class="concave-sidebar alpha grid_3">
  <div class="image-frame">
    <%= link_to(environment) do %>
      <%= image_tag environment.avatar.url(:thumb_140),
        :size => "140x140",
        :alt => 'profile',
        :class => "environment-avatar" %>
    <% end %>
  </div>

  <div class="total-count">
    <span class="count"><%= environment.users.count %></span>
    <span class="members">membros</span>
  </div>

 <ul class="connections clearfix">
    <%= render :partial => 'users/item_short',
      :collection => environment.users.n_recent(16) %>
  </ul><!-- end .connections -->
</div>


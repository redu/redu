<% if @courses.empty? %>
  <%= render "shared/empty_message",
    icon_message: "Nenhum curso.",
    icon_class: "icon-course-gray_128_130",
    message: "Este Ambiente nÃ£o possui nenhum Curso." %>
<% else %>
  <% content_for :container_class do "entity-list-intergation " end %>
  <ul class="list-course">
    <%= render partial: "bootstrap/list_course_item",
      collection: @courses %>
  </ul>
  <%= paginate @courses, theme: "numbers", outer_window: 1,
    inner_window: 4 %>
<% end %>
<%#
  Thumbnail de uma entidade na barra lateral.

  Variáveis:
    environment: o ambiente.
    clickable: se o ambiente deve ser clicável (default true).
%>

<% clickable = true unless local_assigns.has_key? :clickable %>

<% thumbnail = capture do %>
  <%# TODO: Usar 160x160 quando estiver gerado. %>
  <%= image_tag environment.avatar.url(:thumb_140), size: "160x160",
    alt: environment.name, title: environment.name,
    class: "environment-thumbnail" %>
<% end %>

<% if clickable %>
  <%= link_to thumbnail, environment, class: "environment-thumbnail" %>
<% else %>
  <%= thumbnail %>
<% end %>
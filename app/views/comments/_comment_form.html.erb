<div id="comments_form">
	
	
	<% if logged_in? %>
	
		<script type="text/javascript">
			function scrollToNewestComment(){
		        loc = document.location.toString();
		        if (loc.indexOf("#") != -1){
		          parts = loc.split('#')
		          loc = parts[0] + "#newest_comment"
		        } else {
		          loc = loc + "#newest_comment";
		        }
	        	document.location.href = loc;
      		}
		</script>
	
	
		<div id="comments_top">
			
		</div>
		<div id="errors">
			
		</div>
		
		<!-- $$('div#comments div.errors')[0].innerHTML = ''; -->
		<% form_remote_for(:comment, :loading => "$('comment_spinner').show();", :url => comments_url(commentable.class.to_s.underscore, commentable.id ), :html => {:id => 'new_comment_form', :class => "MainForm"}) do |f| %>
		
		<div id="comments_title">INSERIR COMENT√ÅRIO</div> 
	    <div id="comments_form_fields">
			 <%= text_area :comment, :comment, {:size => "76x5", :class => "comments_imput"} %><br />
			
			<%= submit_tag "Enviar", :class => 'bt_comments'  %>
			<%= image_tag 'spinner.gif', :style => 'display:none;', :id => 'comment_spinner' %>
		</div>
		
		<% end %>
	
 			
	<% else %>
		<%= link_to "Log in to leave a comment".l, new_comment_path(commentable.class, commentable.id) %>
	  	<%= :or.l %>
	  	<%= link_to "Create an account".l, signup_path %>
	
	<% end %>
 </div>
	
      
	
	





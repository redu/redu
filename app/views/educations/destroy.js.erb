$("#education-<%= @education.id %>").slideUp(150, "swing", function() {
  <%# Remove o item. %>
  $(this).remove();

  <%# Se for o último item removido, mostra o formulário de criação. %>
  if ($("#curriculum .educations").children().length === 0) {
    $("#curriculum .education .config-new-item").hide();
    $("#new_education").css("padding-top", 0)
      .find(".title")
        .remove()
      .end()
      .find(".cancel")
        .hide()
      .end()
      .slideDown(150, "swing");
  }
});

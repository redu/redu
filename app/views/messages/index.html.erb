<div class="span3">
  <%= render :partial => "users/left_sidebar",
    :locals => { :user => @user } %>
</div>
<div class="span10">
  <div class="content-area">
    <%= render :partial => "messages/breadcrumb",
      :locals => { :user => @user } %>
    <div class="content-body">
      <div class="content-section">
        <ul class="header-breadcrumb">
          <li class="header-breadcrumb-item">
            <%= link_to "Mensagens", user_messages_path(@user),
              :class => "header-breadcrumb-link icon-message-gray_32_34-before",
              :title => "Mensagens" %>
          </li>
          <li class="header-breadcrumb-item">
            <%= link_to user_messages_path(@user),
              :class => "header-breadcrumb-link",
              :title => "Recebidas" do %>
              Recebidas <%= content_tag(:span, parentize(@total_messages),
                          :class => "header-breadcrumb-item-light") %>
            <% end %>
          </li>
        </ul>
        <%= link_to "Nova Mensagem", new_user_message_path(@user),
          :remote => true,
          :class => "button-primary icon-message-new-white_blue_16_18-before pull-right" %>
      </div>
      <%= new_tabs(:new_users) %>
      <%= render :partial => 'messages/index',
        :locals => { :mailbox => :inbox, :messages => @messages,
          :user => @user } %>
    </div>
    <%= render :partial => "messages/breadcrumb",
      :locals => { :user => @user } %>
  </div>
</div>
<div class="span3">
  <%= render :partial => "users/right_sidebar",
    :locals => { :user => @user } %>
</div>
<li id="requisition-<%= item_invitation.id %>" class="list-mix-item clearfix">
  <div class="list-mix-inner">
    <div class="grid_5 course">
      <%= link_to environment_course_path(item_invitation.course.environment, item_invitation.course), :class => 'avatar' do %>
        <%= image_tag 'new/missing_environments_thumb_32.png', :class => 'avatar' %>
      <% end %>
      <div class="grid_4 course details">
        <span>VocÃª foi convidado a participar do Curso</span>
        <%= link_to item_invitation.course.name,
          preview_environment_course_path(item_invitation.course.environment,
                                          item_invitation.course),
          :class => 'name' %>
      </div>
    </div>
    <div class="actions">
      <%= form_tag deny_environment_course_path(
                                   item_invitation.course.environment,
                                   item_invitation.course),
                                   :remote => true, :class => 'form-loader' do %>
        <%= submit_tag "Recusar", :class => 'button-default' %>
      <% end %>
      <% if can? :add_entry, item_invitation.course %>
        <%= form_tag accept_environment_course_path(
          item_invitation.course.environment,
          item_invitation.course),
          :remote => true, :class => "form-loader" do %>
          <%= submit_tag "Aceitar", :class => 'button-success' %>
        <% end %>
      <% else %>
        <span class="waiting">Limite de vagas atingido</span>
      <% end %>
    </div>
  </div>
</li>

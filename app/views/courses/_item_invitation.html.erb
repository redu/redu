<li id="requisition-<%= item_invitation.id %>" class="clearfix">
  <span>VocÃª foi convidado para o curso:</span>
  <div class="grid_5 course">
    <%= image_tag 'new/missing_courses_thumb_32.png', :class => 'avatar' %>
    <div class="grid_4 course-details">
      <%= link_to item_invitation.course.name,
        preview_environment_course_path(item_invitation.course.environment,
                                        item_invitation.course),
        :class => 'name' %>
      <span class="counter">
        <%= pluralize item_invitation.course.approved_users.count,
          'membro'  %>
      </span>
    </div>
  </div>
  <div class="actions">
    <%= form_tag deny_environment_course_path(
                                 item_invitation.course.environment,
                                 item_invitation.course),
                                 :remote => true, :class => 'form-loader' do %>
      <%= submit_tag "Recusar", :class => 'concave-clean' %>
    <% end %>
    <% if can? :add_entry, item_invitation.course %>
      <%= form_tag accept_environment_course_path(
        item_invitation.course.environment,
        item_invitation.course),
        :remote => true, :class => "form-loader" do %>
        <%= submit_tag "Aceitar", :class => 'concave-important' %>
      <% end %>
    <% else %>
      <span class="waiting">Limite de vagas atingido</span>
    <% end %>
  </div>
</li>

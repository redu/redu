<tr id="request-<%= friendship_item.id %>" class="invite">
  <td class="cell-checkbox">
    <%= check_box_tag 'friendship_requests[]', friendship_item.id, false,
      {:class => "autoCheck",
       :id => "remove-#{friendship_item.id}"}  %>
  </td>
  <td class="cell-user-info">
    <%= image_tag friendship_item.friend.avatar(:thumb_32),
      :class => "avatar", :width => 32, :height => 32 %>
    <span class="user">
      <%= link_to friendship_item.friend.display_name,
        friendship_item.friend,
        :target => "_blank"%>
    </span>
    <span class="tip">
      O usuário ainda não aceitou o convite de amizade.
    </span>
  </td>
  <td class="cell-reinvite">
    <%= link_to 'Reenviar convite', resend_email_user_friendship_path(friendship_item.user, friendship_item), :remote => true, :method => :post,
      :class => 'reinvite' %>
  </td>
</tr>

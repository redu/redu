var $form = $("#form-sign-up");
var $modal = $("#modal-sign-up");

<% if @user.errors.empty? %>
  $modal.modal("hide");

  var $modalSuccess = $("<%= escape_javascript render 'landing/modal_sign_up_success',
                        :user => @user %>");
  $modalSuccess.insertAfter($modal).modal("show");

<% else %>
  var $newForm = $("<%= escape_javascript render 'landing/form_sign_up',
                   :user => @user %>");

  <% unless @user.errors[:tos].empty? %>
    $newForm.append("<%= escape_javascript render 'shared/system_message', :message => 'Você não pode se cadastrar se não aceitar os Termos de Uso do Redu.', :type => 'warning' %>");
  <% end %>

  $form.replaceWith($newForm);
  $modal.reduModal('fillHeight');
<% end %>

<%= render :partial => 'users/home_sidebar' %>
<div class="main grid_10 omega" style="width: 580px;">
  <ol id="breadcrumbs" class="clearfix">
    <li>
      <%= link_to 'Home', home_user_path(current_user),
        :class => 'replacement home icon-small icon-home-lightblue_16_18' %>
    </li>
  </ol>
  <% unless @friends_requisitions.empty? %>
    <ul class="friends-requisitions">
      <%= render :partial => 'friendships/friend_requisition',
        :collection => @friends_requisitions, :as => :friend %>
    </ul>
  <% end %>
  <% if current_user.has_course_invitation? %>
    <ul class="courses-requisitions">
      <%= render :partial => 'courses/item_invitation',
        :collection => @course_invitations %>
    </ul>
  <% end %>
  <%= render :partial => 'statuses/create_status',
    :locals => { :statusable => current_user } %>
  <div id="statuses" class="statuses">
    <ol>
      <%= render :partial => 'statuses/item', :collection => @statuses %>
    </ol>

    <%= will_paginate @statuses, :renderer => EndlessRenderer %>
  </div><!-- end .statuses -->
</div><!-- end .main -->

<div class="secondary-sidebar home-sidebar">
  <%= render :partial => 'friendships/invite_button' %>
  <div class="contact-recommendations">
    <div class="call">
      <span class="icon-contacts-white-green_16_18-before">Conecte-se</span>
    </div>
    <ul>
      <%= render :partial => 'users/recommendation_item',
        :collection => @contacts_recommendations %>
    </ul>
  </div>
</div><!-- end .offering -->

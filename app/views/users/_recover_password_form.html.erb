<%= form_for recover_password, :url => recover_password_path, :method => "post" , 
                               :remote => true, 
                               :html => { :class => "concave-form", 
                                          :id => "recover-password-form" } do |f| %>
  <fieldset>
    <%= concave_error_messages_for recover_password %>

    <%= f.text_field :email, 
                     :placeholder => "Digite o seu endereço de e-mail cadastrado no Openredu", 
                     :class => "registered-email" %>
    <%= f.label :email, raw("#{ content_tag :span, "", :class => "icon-small icon-question-blue_12_12 tiptip-left", :title => "Este endereço de e-mail deve ser o mesmo que você cadastrou no Openredu. Mantenha-o atualizado." } E-mail:"), :class => "input-password" %>
    <%= concave_errors_for recover_password, :email %>
    <%= f.submit "Enviar" %>
  </fieldset>
<% end %>

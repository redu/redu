<li class="child clearfix">
  <%= image_tag item.avatar.url(:thumb_32), :alt => 'disciplina' %>
  <%= link_to item.name, space_path(item), :class => "name" %>
  <% if can?(:manage, item) %>
    <%= link_to "Gerenciar", edit_space_path(item),
      :class => "manage icon-manage-gray_8_10-before" %>
  <% end %>
  <div class="info">
    <ul class="resources clearfix">
      <%= link_to "Conteúdo:", space_path(item),
        :class => "title icon-content-lightblue_16_18-before" %>
      <li class="subjects icon-subject-gray_16_18-before">
        <span class="all"><%= pluralize item.subjects.visible.count,  "módulo" %></span>
        <span class="new"><%= pluralize item.subjects.visible.recent.count,  "novo" %></span>
      </li>
      <li class="lectures icon-lecture-gray_16_18-before">
        <span class="all"><%= pluralize item.lectures_count, "aula" %></span>
      </li>
    </ul>
    <ul class="resources clearfix">
      <%= link_to "Mural da Disciplina:", mural_space_path(item),
        :class => "title icon-wall-lightblue_16_18-before" %>
      <li class="comments">
        <span class="all"><%= pluralize item.activities.count, "comentário" %></span>
        <span class="new"><%= pluralize item.activities.recent.count,  "novo" %></span>
      </li>
    </ul>
    <ul class="resources clearfix">
      <%= link_to "Arquivos de Apoio:", space_folders_path(item),
        :class => "title icon-file-lightblue_16_18-before" %>
      <li class="files"><span class="all"><%= pluralize item.myfiles.count, "arquivo" %></span></li>
    </ul>
  </div>
</li>

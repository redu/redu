<div id="hierarchy-header" class="clearfix space-header">
  <span class="parent">
    <%= link_to space.course.environment.initials_or_name,
      environment_path(space.course.environment) %> /
    <%= link_to space.course.name,
      environment_course_path(space.course.environment, space.course)%>
  </span>
  <% if can?(:manage, space) %>
    <%= link_to "Gerenciar discipl.",
      edit_space_path(space),
      :class => "manage icon-manage-gray_8_10-before" %>
  <% end %>
  <h3 class="call name"><%= link_to space.name, space_path(space) %></h3>
  <% unless space.description.blank? && space.tags.empty? %>
    <div class="details">
      <% unless space.description.blank? %>
        <span class="description icon-bio-gray_16_18-before">
          <%= space.description %>
        </span>
      <% end %>
      <% space_tags = space.tags %>
      <% unless space_tags.empty? %>
        <ul class="tags icon-tag-gray_16_18-before clearfix <%= space.description.blank? ? "" : "separator" %>">
          <% space_tags.each do |tag| %>
            <li>
              <%= link_to tag, nil %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
</div><!-- end #hierarchy-header -->

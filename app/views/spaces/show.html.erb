<div class="content-section">
  <h3 class="header-breadcrumb-big icon-lecture-gray_32_34-before">Aulas</h3>
</div>

<% if @subjects.empty? %>
  <%= render "shared/empty_message",
    icon_message: "Nenhum módulo.",
    icon_class: "icon-subject-empty_128_130",
    message: "Ainda não há Módulos criados para esta Disciplina." %>
<% else %>
  <div class="content-section">
    <ul class="list-subject" style="clear: both;">
      <%= render partial: "bootstrap/list_subject_item",
        collection: @subjects, locals: { user: current_user } %>
    </ul>
  </div>
  <% if @subjects.total_pages > 1 %>
    <hr class="list-separator">
  <% end %>
  <%= paginate @subjects, theme: "numbers", outer_window: 1,
    inner_window: 4 %>
<% end %>
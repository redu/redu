<li id="status-<%= compound.id %>">
  <div class="status icons-big-after icon-contact-lightblue_64_66-after">
    <div class="status-text">
      <%= image_tag compound.statusable.avatar.url(:thumb_32),
        :class => "avatar", :width => 32, :height => 32 %>
      <%= link_to "#{compound.statusable.first_name} #{compound.statusable.last_name}",
        user_path(compound.statusable), :class => "username" %>
      <span class="status-info">
        adicionou <%= compound.logs.count %> novas pessoas Ã  sua rede de contatos
      </span>
    </div>
    <div class="box">
      <ul class="grouped-photos">
        <%= render :partial => "statuses/compound_item",
          :collection => compound.logs.collect {|log| log.logeable.friend },
          :as => :compound_user %>
      </ul>
      <% unless compound.logs.count <= 11 %>
        <a href="#" class="show-more">Ver mais </a>
      <% end %>
    </div>
  </div>
</li>

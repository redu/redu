<%#
  Log da aula.

  Exemplo: "X publicou a aula Y".

  VariÃ¡veis:
    log: o log da aula.
%>

<%= content_tag :li, id: "status-#{log.id}" do %>
  <hr class="list-separator">
  <div class="status">
    <div class="context">
      <%= link_to log.logeable.name,
        space_subject_lecture_path(log.logeable.subject.space, log.logeable.subject, log.logeable),
        class: "text-replacement context-icon icon-subject-gray_32_34-before" %>
      <%= content_tag :span,
        "#{log.logeable.subject.space.course.environment.name} > #{log.logeable.subject.space.course.name} > #{log.logeable.subject.space.name}",
        class: "legend" %>
      <%= link_to log.logeable.name,
        space_subject_lecture_path(log.logeable.subject.space, log.logeable.subject, log.logeable) %>
    </div>
    <div class="subject">
      <%= render "statuses/user_image", user: log.user %>
      <div class="subject-info">
        <%= render "statuses/user_name", user: log.user,
          classes: "icon-#{role_icon(role_at(log.user, log.logeable)).first}-gray_16_18-before" %>
        <%= content_tag :span, raw(auto_link(log.action_text)), class: "action" %>
        <%= link_to log.logeable.name,
          space_subject_lecture_path(log.logeable.subject.space, log.logeable.subject, log.logeable),
          class: "icon-subject-gray_16_18-before" %>
        <%= render "statuses/timeago", status: log, timestamp: log.created_at %>
      </div>
    </div>
  </div>
<% end %>
<div class="container_16 clearfix" id="course-invitation">
  <div class="grid_4 alpha">
    <h1 class="logotipo replacement">
      <%= link_to "Redu: rede social educacional", application_path  %>
    </h1>
  </div>
  <div class="clearfix invite">
    <span class="salutation">Olá, você foi convidado para participar do curso:</span>
    <div  class="clearfix course">
      <%= image_tag 'new/missing_environments_thumb_32.png',
        :class => 'avatar' %>
      <div class="informations">
        <div class="header">
          <span class="environment"><%= @environment.name %></span>
          <span class="name"><%= @course.name %></span>
          <% unless @course.tags.blank? %>
            <ul class="tags clearfix">
              <% @course.tags.each do |tag| %>
                <li>
                  <%= link_to tag, environment_course_user_course_invitation_path(
                    @course.environment, @course, @user_course_invitation) %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <span class="description">
          <% if @course.description.blank? %>
            Sem descrição.
          <% else %>
            <%= @course.description %>
          <% end %>
        </span>
        <ul class="statistics">
          <li>
            <em>Membros:</em>
            <span><%= @course.approved_users.length %></span>
          </li>
          <li>
            <em>Professores:</em>
            <span><%= @course.teachers.length %></span>
          </li>
          <li>
            <em>Tutores:</em>
            <span><%= @course.tutors.length %></span>
          </li>
          <li>
            <em>Alunos:</em>
            <span><%= @course.students.length %></span>
          </li>

        </ul>
        <div class="audience">
          <em>Audiência:</em>
          <ul>
            <% if @course.audiences.blank? %>
              <li><%= link_to 'Não informado', nil %></li>
            <% else %>
              <% @course.audiences.each do |audience| %>
                <%= link_to audience.name, environment_course_path(@course, @course.environment) %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="grid_6 omega">
    <div class="form-login">
        <div class="header-form-login">
          <h3 class="new-version-call">Já possui uma conta? Acesse nossa versão <q class="beta-call" >beta </q>.</h3>
        </div>
        <%= form_for @user_session, :html => { :class => "concave-form" }, :url => sessions_path do |f| %>
          <%= field_set_tag do %>
            <%= hidden_field_tag :invitation_token, @user_course_invitation.token %>
            <%= f.text_field :login, :id => "user-login", :value => "Digite seu login e, abaixo, sua senha" %>
            <%= concave_errors_for @user_session, :login %>

            <%= f.password_field :password, :class => "password-field" %>
            <%= concave_errors_for @user_session, :password %>
            <button>Entrar</button>

            <div class="short-options">
              <%= f.check_box :remember_me, :class => "check-stay-connect" %>
              <%= f.label :remember_me, "Matenha-me conectado", :class => "label-stay-connect" %>
              <%= link_to "Recuperar login & senha", forgot_password_path, :class => "recover-login" %>
            </div>
            <p class="or-call">&minus; ou &minus;</p>
          <% end %>
       <% end %>
       <%= link_to "Que tal se cadastrar?", signup_path(:invitation_token => @user_course_invitation.token), :class => "new-account" %>
      </div>
    </div>
  </div>
</div>

<%#
  Formulário contato com parceiro.

  Variáveis:
    environment: o ambiente.
    migration:
    billable_url:
%>

<% partner = Partner.find_by_email("cns@redu.com.br") %>
<%= form_for :partner_contact, :url => contact_partner_path(partner),
  :html => { :id => "partner-contact-form", :method => :post, :class => "concave-form", :remote => "true" } do |f| %>
  <%= concave_error_messages_for(:partner_contact) %>
  <%= hidden_field_tag :new_layout, false %>
  <%= render :partial => 'partners/partner_contacts/form_old', :locals => {:f => f, :environment => environment, :migration => migration ||= false, :billable_url => billable_url ||= nil } %>
<% end %>

<div id="view_video" class="stage" align="center" >
  <% unless lecture.lectureable.conversion_processing? %>
    <%= raw(lecture.lectureable.display_ipaper(:disable_related_docs => true,
                                               :mode => :slide,
                                               :hide_disabled_buttons => true )) %>
  <div id="document_stage"></div>
  <% else %>
    <div class="box_notice">
      O documento está sendo processado, em breve estrará disponível
    </div>
  <% end %>
</div>

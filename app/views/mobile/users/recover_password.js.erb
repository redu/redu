var $form = $("#mobile-form-password-recovery");

<%# Senha enviada com sucesso. %>
<% if @user %>
  var $newForm = $("<%= escape_javascript render :partial => 'users/password_recovery_successfully_sent', :locals => { :user_email => @user.email } %>");

<%# Erro de validação. %>
<% else %>
  var $newForm = $("<%= escape_javascript render :partial => 'users/form_password_recovery', :locals => { :recover_password => @recover_password } %>");
<% end %>

$form.replaceWith($newForm);

var $form = $("#form-sign-in");

<% if @user_session %>
  var $newForm = $("<%= escape_javascript render 'shared/form_sign_in',
                   :user_session => @user_session %>");
  $form.replaceWith($newForm);
<% else %>
  $form.append('<%= escape_javascript render "shared/system_message",
               :message => "O prazo máximo de 30 para ativar sua conta expirou. Portanto,
               <strong>você só poderá utilizar o Redu após ativar sua conta</strong>.
               Reenvie o e-mail de ativação para: #{ @user_email }.
               #{ link_to "Reenviar e-mail", resend_activation_url(:email => @user_email), :class => "button button-danger" } ",
               :type => "warning" %>');
<% end %>

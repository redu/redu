<%#
  Quase cópia de Spaces#show, sem paginação, lista vazia e
  com JS de scroll para o módulo.
%>

<script>
  $(function() {
    $("body").animate({
      scrollTop: $("#subject-<%= @subject.id %>").offset().top - 75
    }, "slow");
  });
</script>

<div class="content-section">
  <h3 class="header-breadcrumb-big icon-lecture-gray_32_34-before">Aulas</h3>
</div>

<div class="content-section">
  <ul class="list-subject">
    <%= render partial: "bootstrap/list_subject_item",
      collection: @subjects, locals: { user: current_user } %>
  </ul>
</div>
<%#
  A lista de resultados de perfis.

  VariÃ¡veis:
    profiles: os perfis encontrados.
    query: o termo pesquisado.
%>
<% if profiles.count > 0 %>
  <div class="portal-search-category">
    <span class="portal-search-category-title icon-profile-darkgray_32_34-before">Perfis: <%= pluralize(search_results_counter(profiles), "pessoa") %></span>
    <% if show_see_all_results_link?(profiles.total_count) %>
      <%= link_to "Veja todos os resultados", search_profiles_path(:q => query),
        :title => "Veja todos os resultados de perfis",
        :class => "portal-search-category-link" %>
    <% end %>
  </div>
  <ul class="list-2-columns list-columns-separator clearfix portal-search-list-results">
    <%= render :partial => "user", :collection => profiles %>
  </ul>
<% end %>
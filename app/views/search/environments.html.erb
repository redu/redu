<%= content_for :wrapper_class do %>search-portal<% end %>

<div class="span16">
  <%= render :partial => "header" %>
  <div class="content-body search-content">
    <%= tabs :search do %>
      <%# Se foi encontrado algum resultado. %>
      <% if @total_results > 0 %>
        <div class="search-results">
          <%= render :partial => "result_quantity",
            :locals => { :query => @query,
                         :total_results => @total_results } %>
            <%= subtabs :search, { :renderer => :links } do %>
            <%= render :partial => "environment_list",
              :locals => { :environments => @environments,
                           :query => @query } %>
            <%= render :partial => "course_list",
              :locals => { :courses => @courses,
                           :query => @query } %>
            <%= render :partial => "space_list",
              :locals => { :spaces => @spaces,
                           :query => @query } %>
          </div>
        <% end %>
      <%# Nenhum resultado encontrado. %>
      <% else %>
        <%= render :partial => "empty_search_result",
          :locals => { :query => @query } %>
      <% end %>
    <% end %>
  </div>
  <div class="breadcrumb-mini-wrapper">
    <%# TODO: A ser substituÃ­do pelo simple_navigation depois. %>
    <%= render :partial => "breadcrumb_mini" %>
  </div>
</div>
<%#
  A lista de resultados das disciplinas.

  VariÃ¡veis:
    spaces: as disciplinas encontrados.
    query: o termo pesquisado.
%>
<% if spaces.count > 0 %>
  <ul class="results-group results-by-space">
    <li class="title-result">
      <span class="title-result-name icon-space-gray_32_34-before">Disciplinas: <%= search_results_counter(spaces) %></span>
      <% if show_see_all_results_link?(spaces.total_count) %>
        <%= link_to "Veja todos os resultados",
          search_environments_path(:q => query, :f => ["disciplinas"]),
          :title => "Veja todos os resultados de disciplinas" %>
      <% end %>
    </li>
    <li>
      <ul class="result-found">
        <%= render :partial => "space", :collection => spaces %>
      </ul>
    </li>
    <li><hr class="list-separator"></li>
  </ul>
<% end %>
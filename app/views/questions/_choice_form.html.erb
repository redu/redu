<%= form_for :choice, :url => exercise_question_choices_path(exercise, question),
  :method => :post, :remote => true, :html => { :id => "form-choice" } do |f| %>
  <%= render "questions/navigation",
    :exercise => exercise, :current => question,
    :first => first, :last => last, :review => review %>
  <%= render "questions/form", :f => f, :exercise => exercise,
    :question => question, :result => result, :review => review,
    :choice => choice %>
  <%= render "questions/submission", :exercise => exercise, :question => question,
    :first => first, :last => last, :review => review %>
<% end %>

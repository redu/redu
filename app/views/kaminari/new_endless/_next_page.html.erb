<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
  <%= link_to_unless current_page.last?, raw(t 'views.pagination.endless'),
    url, :rel => 'next', :remote => true, :class => 'button-default icon-arrow-down-pagination-gray_16_18-before' %>
  <% if defined? text %>
    <span class="counter"><%= text.gsub(/<X>/, (current_page.to_i * per_page).to_s) %> </span>
  <% end %>

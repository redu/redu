<% content_for :header_scripts_and_styles do %>
  <%= include_javascripts :invite_friend %>
<% end %>

<div class="span3">
  <%= render "users/left_sidebar", :user => @user %>
</div>
<div class="span10">
  <div class="content-area">
    <%= render "friendships/breadcrumb", :user => @user %>
    <div class="content-body friend-invitation">
      <div class="content-section">
        <ul class="header-breadcrumb">
          <li class="header-breadcrumb-item">
            <%= link_to "Meus Contatos", user_friendships_path(@user),
              :class => "header-bradcrumb-link icon-connections-gray_32_34-before",
              :title => "Meus Contatos" %>
          </li>
          <li class="header-breadcrumb-item">
            <%= link_to "Amigos", user_friendships_path(@user),
              :class => "header-bradcrumb-link",
              :title => "Amigos" %>
          </li>
          <li class="header-breadcrumb-item">
            <%= link_to "Convidar amigos", new_user_friendship_path(@user),
              :class => "header-bradcrumb-link",
              :title => "Convidar amigos" %>
          </li>
        </ul>
      </div>
      <%= new_tabs(:new_users) %>
      <%= render "friendships/friend_invitation", :user => @user %>
      <hr class="list-separator">
      <%= render "invitations/manage_invitations", :invitations => @invitations,
        :friendship_requests => @friendship_requests %>
    </div>
    <%= render "friendships/breadcrumb", :user => @user %>
  </div>
</div>
<div class="span3">
  <%= render "users/right_sidebar", :user => @user %>
</div>
<div class="span3">
  <% if @profile %>
    <%= render "users/profile_sidebar", user: @user, contacts: @contacts %>
  <% else %>
    <%= render "users/left_sidebar", :user => @user %>
  <% end %>
</div>
<div class="span10">
  <div class="content-area">
    <% unless @profile %>
      <%= render "friendships/breadcrumb", :user => @user %>
    <% end %>
    <div class="content-body">
      <% unless @profile %>
        <div class="content-section">
          <%= render "bootstrap/header_breadcrumb", :header_breadcrumb_items => [
            { :name => "Meus Contatos",
              :link => user_friendships_path(@user),
              :classes => "icon-connections-gray_32_34-before"
            },
            { :name => "Amigos",
              :link => user_friendships_path(@user),
              :counter => @total_friends
            }
            ] %>
          <%= link_to "Convidar amigos", new_user_friendship_path(@user), :class => "button-primary icon-invite-white_blue_16_18-before pull-right" %>
        </div>
        <%= new_tabs(:new_users) %>
      <% end %>
      <div class="content-section">
        <% if @friends.size == 0 %>
          <script>
            $(function() {
              // Foca no campo de busca e troca o filtro para perfis.
              $("body").on("click", ".focus-search-users", function() {
                setTimeout(function() {
                  var $searchProfiles = $('.form-search-filters input[value="perfil"]:radio');

                  $searchProfiles.change().prop("checked", true);
                  $("#token-input-q").focus();
                }, 100);
              });
            });
          </script>
          <%= render "shared/empty_message", :icon_message => "Nenhum contato",
            :icon_class => "icon-invite-empty_128_130",
            :message => raw('Adicione amigos e crie sua rede social educacional. Você pode conversar, ajudar e tirar dúvidas com seus amigos. <span class="focus-search-users link-fake" title="Procure por usuários no Redu">Que tal procurar?</span>') %>
        <% else %>
          <ul class="list-2-columns list-columns-separator clearfix">
            <%= render :partial => "users/item_medium_new", :collection => @friends %>
          </ul>
        <% end %>
      </div>
      <% if @friends.total_pages > 1 %>
        <hr class="list-separator">
      <% end %>
      <%= paginate @friends, :theme => "numbers",
        :outer_window => 1, :inner_window => 4 %>
    </div>
    <% unless @profile %>
      <%= render "friendships/breadcrumb", :user => @user %>
    <% end %>
  </div>
</div>
<div class="span3">
  <% if @profile %>
    <%= render "users/secondary_sidebar", user: @user,
      subscribed_courses_count: @subscribed_courses_count,
      environments: @environments %>
  <% else %>
    <%= render "users/right_sidebar", :user => @user %>
  <% end %>
</div>